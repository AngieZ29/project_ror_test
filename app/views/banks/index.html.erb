<div>
  <h1 class="font-bold text-3xl">Listado Bancos</h1>
  <br>
  <div class="flex space-x-2 justify-left">
    <button type="button"
      class="inline-block px-2 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight
        camelcase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700
        active:bg-blue-800">
      <%= link_to '+ Agregar Banco', new_bank_path(@bank) %>
    </button>
  </div>
  <br>
  <div class="flex justify-between left">
    <br>
    <table class="text-left">
      <thead class="border-b">
        <tr class="border-b bg-blue-100 border-blue-200">
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            ID
          </td>
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            Nombre Banco
          </td>
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap text-center">
            Acciones
          </td>
        </tr>
        <% @banks.each do |bank| %>
          <tr class="border-b">
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <%= bank.id %>
            </td>
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <%= bank.name %>
            </td>
            <td>
              <button type="button"
                class="inline-block px-1 py-2.5 bg-yellow-500 text-white font-medium text-xs
                  leading-tight camelcase rounded shadow-md hover:bg-yellow-700 hover:shadow-lg
                  focus:bg-yellow-700 active:bg-yellow-800">
                <%= link_to 'Ver', bank_path(bank) %>
              </button>
              <button type="button"
                class="inline-block px-1 py-2.5 bg-green-500 text-white font-medium text-xs
                  leading-tight camelcase rounded shadow-md hover:bg-green-700 hover:shadow-lg
                  focus:bg-green-700 active:bg-green-800">
                <%= link_to 'Editar', edit_bank_path(bank) %>
              </button>
              <button type="button"
                class="inline-block px-1 py-2.5 bg-red-500 text-white font-medium text-xs
                  leading-tight camelcase rounded shadow-md hover:bg-red-700 hover:shadow-lg
                  focus:bg-red-700 active:bg-red-800">
                <%= link_to 'Borrar', bank, method: :delete,
                  data: { confirm: 'Estas seguro de borrarlo?' } %>
              </button>
            </td>
          </tr>
        <% end %>
      </thead>
    </table>
    <br>
  </div>
</div>
