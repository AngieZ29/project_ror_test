<div>
  <h1 class="font-bold text-3xl">  <%= t('.bank_detail')%></h1>
  <br>
  <div class="flex justify-between left">
    <br>
    <table class="text-left">
      <thead class="border-b">
        <tr class="border-b bg-blue-100 border-blue-200">
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.bank_id') %>
          </td>
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.bank_name') %>
          </td>
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap text-center">
            <%= t('.bank_create_date') %>
          </td>
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap text-center">
            <%= t('.bank_update_date') %>
          </td>
        </tr>
        <tr class="border-b">
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @bank.id %>
          </td>
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @bank.name %>
          </td>
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @bank.created_at %>
          </td>
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @bank.updated_at %>
          </td>
        </tr>
      </thead>
    </table>
    <br>
  </div>
  <br>
  <div>
    <%= link_to t('.bank_return'), banks_path,
      class: 'inline-block px-2 py-2.5 bg-blue-500 text-white font-medium
        text-xs leading-tight camelcase rounded shadow-md hover:bg-blue-700 hover:shadow-lg
        focus:bg-blue-700 active:bg-blue-800' %>
  </div>
</div>
