<%= simple_form_for @bank do |f| %>
  <div>
    <%= f.input :name, label: 'Nombre Banco: ',
      class: 'form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white
        bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none',
      placeholder: 'Ingresar Banco' %>
  </div>
  <br>
  <div>
    <tr>
      <td><%= f.submit 'Guardar',
        class: 'inline-block px-2 py-2.5 bg-green-500 text-white font-medium
          text-xs leading-tight camelcase rounded shadow-md hover:bg-green-700 hover:shadow-lg
          focus:bg-green-700 active:bg-green-800' %></td>
      <td><%= link_to 'Volver', banks_path,
        class: 'inline-block px-2 py-2.5 bg-blue-500 text-white font-medium
          text-xs leading-tight camelcase rounded shadow-md hover:bg-blue-700 hover:shadow-lg
          focus:bg-blue-700 active:bg-blue-800' %></td>
    </tr>
  </div>
<% end %>
