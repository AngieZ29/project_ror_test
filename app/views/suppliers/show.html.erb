<div>
  <h1 class="font-bold text-3xl"> <%= t('.supplier_list') %></h1>
  <br>
  <div class="flex justify-between left">
    <br>
    <table class="text-left">
      <thead class="border-b">
        <tr class="border-b bg-blue-100 border-blue-200">
          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.supplier_name') %>
          </td>

          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.supplier_nit') %>
          </td>

          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.supplier_name_contact') %>
          </td>

          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.supplier_phone_number') %>
          </td>

          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.bank') %>
          </td>

          <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
            <%= t('.supplier_bank_account') %>
          </td>
        </tr>

        <tr class="border-b">
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.name %>
          </td>

          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.nit %>
          </td>

          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.name_contact %>
          </td>

          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.phone_number.empty? ? t('.without_data') : @supplier.phone_number%>
          </td>

          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.banks.first.name %>
          </td>

          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <%= @supplier.bank_account %>
          </td>
        </tr>
      </thead>
    </table>
    <br>
  </div>
  <br>
  <div>
    <button type="button"
      class="inline-block px-1 py-2.5 bg-green-500 text-white font-medium text-xs
        leading-tight camelcase rounded shadow-md hover:bg-green-700 hover:shadow-lg
        focus:bg-green-700 active:bg-green-800">
      <%= link_to t('.edit'), edit_supplier_path(@supplier) %>
    </button>

    <%= link_to t('.supplier_return'), suppliers_path,
      class: 'inline-block px-2 py-2.5 bg-blue-500 text-white font-medium
        text-xs leading-tight camelcase rounded shadow-md hover:bg-blue-700 hover:shadow-lg
        focus:bg-blue-700 active:bg-blue-800' %>
  </div>
</div>
